.body{
  margin-bottom: 5vw;
}
.content {  /*the parent element of the content*/
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content image {  /*image*/
  width: 31vw;
  height: 31vw;
  margin-top: 20vw;
  margin-bottom: 10px;
}

.aboutUs {
  margin-bottom: 32px;
  font-size: 19px;
  font-weight: bold;
}

.content-text {
  text-align: center;
  font-size: 19px;
  margin-top: 5px;
  margin-bottom: 5px;
  line-height: 20px;
  margin-left: 5vw;
  margin-right: 5vw;
}

.cardStyle{
  width: 90vw;
  height: auto;
  background-color: white;
  border-radius: 6px;
  box-shadow: 0px 0px 5px rgba(0,0,0,0.1);
  padding-top: 10px;
  padding-bottom: 10px;
}

.showHideButton{
  background-color: white;
  padding: 4px 4vw 4px 4vw;
  border-radius: 6px;
  box-shadow: 0px 0px 5px rgba(0,0,0,0.1);
}

.showHideButton :active{
  background-color: rgba(0, 0, 0, 5%);
  border-radius: 6px;
}